<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ChoiceBox fx:id="dieSelect" prefWidth="100.0" />
      <Button fx:id="amountSub" mnemonicParsing="false" prefWidth="25.0" text="-">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
      <TextField fx:id="amountField" alignment="CENTER" editable="false" prefWidth="50.0" text="0" />
      <Button fx:id="amountAdd" mnemonicParsing="false" text="+" />
      <Button fx:id="amountReset" mnemonicParsing="false" text="reset">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="bonusSub" mnemonicParsing="false" prefWidth="25.0" text="-">
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin></Button>
      <TextField fx:id="bonusField" alignment="CENTER" editable="false" prefWidth="50.0" text="0" />
      <Button fx:id="bonusAdd" mnemonicParsing="false" text="+" />
      <Button fx:id="bonusReset" mnemonicParsing="false" text="reset">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Button>
      <CheckBox fx:id="addEveryCheck" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0">
         <HBox.margin>
            <Insets left="65.0" />
         </HBox.margin>
      </CheckBox>
   </children>
</HBox>
